{{>search}}

<div class="pageWrapper flex flex-row flex-nowrap bg-inherit">
  <div class="leftWrapper basis-1/5 border-2 min-h-screen">
  <!--empty space -->
  </div>
    <div class="questionsWrapper basis-3/5">
      <div class="flex flex-row py-4 border-b-2">
        <div class="basis-4/5"><h1 class="my-4 mx-8 text-4xl font-bold">{{title}}</h1></div>
        <div class="basis-1/5">
          <button class="rounded-lg px-2 py-2 my-4 bg-sky-600 text-white hover:bg-sky-700" value="Ask Question" onclick="location.href='/questions/question'" >Ask Question</button>
        </div>
      </div>
        <div class="filter-options flex flex-row">
          <div class="basis-4/5">
            <p hidden>1</p>
          </div>
          <div class="basis-1/10">
            <button class="rounded-full m-1 p-2 align-items-center justify-content-center hover:bg-yellow-400 focus:bg-yellow-200 active:bg-yellow-200">New&nbsp;<span class="material-symbols-outlined flash_on_icon text-sky-300" id="flash_on">flash_on</span></button>
          </div>
          <div class="basis-1/10">
            <button class="rounded-full m-1 p-2 align-items-center justify-content-center hover:bg-yellow-400 focus:bg-yellow-200 active:bg-yellow-200">top&nbsp;<span class="material-symbols-outlined mode_heat_icon" id="mode_heat">mode_heat</span></button>
          </div>
        </div>
      <div id="searchResultsContainer" class=""></div>
        {{#if questions}}
        <div id="questionsWrapper1">
          {{#each questions}}
          <div class="questionWrapper1 flex flex-row border-b-2 px-2">
            
            <div class="questionStats my-4 ml-8 ml-10 whitespace-normal basis-1/3">
              <h4 class="pl-5 text-sm text-normal"><span class="ml-6">{{votes}} votes</span></h4>
              <h4 class="pl-5 text-sm text-extralight text-slate-500"><span class="ml-1">{{comments.length}} answers</span></h4>
            </div>
            <div class="question basis-2/3 my-4 w-fit ml-5 h-auto whitespace-normal text-ellipsis overflow-hidden">
              <h3 class="text-sky-600 text-lg font-semibold hover:text-sky-700"><a href="/questions/{{_id}}">{{title}}</a></h3>
              <p class="text-slate-500 py-6 my-2 text-ellipsis overflow-hidden max-h-36">{{problemDetails}}</p>
              {{#each tagsObj}}
                <button class="tags rounded-md border-slate-900 outline-0 px-2 py-1 my-1 bg-sky-100 text-sky-600 text-sm font-semibold hover:bg-sky-200" value="{{tag}}">{{tag}}</button>
              {{/each}}
            </div>
          </div>
          {{/each}}
        </div>
        {{else}}
          <div class="error">
            <h3>{{message}}</h3>
          </div>
        {{/if}}
    </div>
  <div class="rightWrapper basis-1/5 border-2 min-min-h-screen">
  <!--empty space -->
  </div>
</div>

