
{{>headerEmpty}}
<div class="background-container">
    <div class="overlay">
        <form id="setting-form" action="/userActivity/setting" method="POST">
            <h1 class="bigtext">Update Info</h1>
            <label for="firstNameInput">First Name:</label>
            <input type="text" id="firstNameInput" name="firstNameInput" value={{user.firstName}}>
            <p class="error" id="firstNameError" hidden>Please enter valid first name.</p>
            <br>

            <label for="lastNameInput">Last Name:</label>
            <input type="text" id="lastNameInput" name="lastNameInput" value={{user.lastName}}>
            <p class="error" id="lastNameError" hidden>Please enter valid last name.</p>
            <br>

            {{!-- The below inputs are hidden beacuse i need to pass the values to jQuery--}}
            <input type="hidden" id="defaultFirstName" value={{user.firstName}}>
            <input type="hidden" id="defaultLastName" value={{user.lastName}}>
            <input type="hidden" id="defaultStatus" value={{user.academicStatus}}>

            <label for="academicStatusInput">Role:</label>
            <select id="academicStatusInput" name="academicStatusInput">
                {{!-- ["undergraduate", "graduate", "doctoral", "non-degree", "certificate-programs", "teacher", "other"] --}}
                <option value="undergraduate">undergraduate</option>
                <option value="graduate">graduate</option>
                <option value="doctoral">doctoral</option>
                <option value="non-degree">non-degree</option>
                <option value="certificate-programs">certificate-programs</option>
                <option value="teacher">teacher</option>
                <option value="other">other</option>
            </select>
            <p class="error" id="academicStatusError" hidden>Please select a role.</p>
            <br>
            <br>
            <button type="submit" class="settingButton block my-2 bg-green-500" id="register">Update Info</button>
            {{#if error.length}}
                <p class="error">{{error}}</p>
            {{/if}}
        </form>

    </div>
</div>


{{>footer}}